<div class="col-md-6 offset-md-3">
    <div class="card">
        <div class="card-header">
            <h1>Productos</h1>
        </div>

        <div class="card-body">
            {{#if contacts}}

            <table class="list-group">
                <tr class="list-group-item d-flex justify-content-between align-items-center">
                    <th>ID</th>
                    <th>NOMBRE</th>
                    <th>PRECIO</th>
                    <th>EXISTENCIAS</th>
                    <th>EDITAR</th>
                    <th>ELIMINAR</th>
                </tr>
                {{#each contacts}}
                <tr class="list-group-item d-flex justify-content-between align-items-center">
                    <td> {{id}}</td>
                    <td> {{nombre}}</td>
                    <td> $ {{precio}}</td>
                    <td> {{existencias}}</td>
                    <td> <a href="/actualizar-producto/{{id}}" class="btn btn-info">EDITAR</a></td>
                    <td> <a href="/delete/{{id}}" class="btn btn-danger">Eliminar</a></td>
                </tr>

                {{/each}}
            </table>
            {{else}}
            <p>No hay productos</p>
            {{/if}}
        </div>
        <div class="card-footer">
            <form action="/create" method="POST">
                <div class="form-group">
                    <input type="text" name="nombre" placeholder="Nombre" class="form-control" autofocus>
                </div>
                <div class="form-group">
                    <input type="number" name="precio" placeholder="Precio" class="form-control">
                </div>
                <div class="form-group">
                    <input type="number" name="existencias" placeholder="Existencias" class="form-control">
                </div>

                <button class="btn btn-primary btn-block">
                    GUARDAR
                </button>
            </form>
        </div>
    </div>
</div>